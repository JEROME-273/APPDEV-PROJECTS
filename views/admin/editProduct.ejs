<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
    }
    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 20px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }
    input[type="text"],
    input[type="number"],
    input[type="file"],
    textarea {
      width: calc(100% - 16px);
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      box-sizing: border-box;
    }
    textarea {
      height: 120px; /* Set a reasonable height for the description field */
    }
    .button-container {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }
    button {
      padding: 10px;
      font-size: 16px;
      border-radius: 4px;
      cursor: pointer;
      border: none;
    }
    button.save {
      margin-right: 17px;
      width: 45%;
      background-color: #2c3e50;
      color: #fff;
    }
    button.save:hover {
      background-color: #34495e;
    }
    button.back {
      width: 45%; /* Adjusted width to fit side by side */
      background-color: red;
      color: #fff;
    }
    button.back:hover {
      background-color: darkred;
    }
    .error {
      color: red;
      margin-bottom: 15px;
    }
    .success {
      color: green;
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Edit Product</h1>
    <% if (errors && errors.length > 0) { %>
      <div class="error">
        <%= errors.join('<br>') %>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="success">
        <%= success %>
      </div>
    <% } %>
    <form action="/admin/edit-product/<%= product.id %>" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="product_name">Product Name:</label>
        <input type="text" id="product_name" name="product_name" value="<%= product.product_name %>" required>
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" step="0.01" required>
      </div>
      <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= product.description %></textarea>
      </div>
      <div class="form-group">
        <label for="product_image">Product Image:</label>
        <input type="file" id="product_image" name="product_image" accept="image/*">
        <% if (product.product_image) { %>
          <p>Current Image: <img src="/uploads/<%= product.product_image.split('/').pop() %>" alt="<%= product.product_name %>" width="100" height="100"></p>
        <% } %>
      </div>
      <div class="button-container">
        <button type="button" class="back" onclick="window.location.href='/admin/products'">Back</button>
        <button type="submit" class="save">Save Changes</button>
      </div>
    </form>
  </div>
</body>
</html>
