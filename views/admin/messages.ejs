<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      height: 100vh;
      background-color: #2e3b4e;
      color: #fff;
      padding-top: 20px;
      z-index: 100;
    }

    .sidebar .logo {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .sidebar .logo img {
      border-radius: 50%;
      width: 70px;
      height: 70px;
    }

    .sidebar nav ul {
      list-style: none;
      padding: 20px 0;
    }

    .sidebar nav ul li a {
      display: block;
      padding: 10px 20px;
      color: #fff;
      text-decoration: none;
    }

    .sidebar nav ul li a:hover {
      background-color: #3f4d63;
    }

    .sidebar nav ul li .dropdown-menu {
      display: none;
      list-style: none;
      padding-left: 20px;
    }

    .sidebar nav ul li.open .dropdown-menu {
      display: block;
    }

    .main-content {
      margin-left: 250px;
      padding: 20px;
      background-color: #1b2533;
      color: #fff;
      flex: 1;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 20px;
    }

    .search-bar input {
      padding: 5px;
      border: none;
      border-radius: 5px;
    }

    .profile {
      display: flex;
      align-items: center;
    }

    .profile i {
      font-size: 40px;
      color: #fff;
      margin-right: 10px;
    }

    .logout-btn {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      background-color: #dc3545;
      color: white;
      cursor: pointer;
    }

    .logout-btn:hover {
      background-color: #c82333;
    }

    /* Chat bubble styles */
    .message-list {
      margin-top: 20px;
      padding: 0 15px;
    }

    .message-list li {
      display: flex;
      flex-direction: column;
      margin-bottom: 15px;
    }

    .user-message,
    .admin-reply {
      max-width: 70%;
      padding: 10px 20px;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .user-message {
      align-self: flex-start;
      background-color: #34495e;
      color: white;
    }

    .admin-reply {
      align-self: flex-end;
      background-color: #16a085;
      color: white;
    }

    .message-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }

    .message-body {
      margin-bottom: 15px;
    }

    .no-reply {
      font-style: italic;
      color: #bbb;
    }

    .reply-form {
      margin-top: 15px;
    }

    .reply-form textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      background-color: #34495e;
      color: white;
      border: none;
      margin-bottom: 10px;
      resize: vertical;
    }

    .reply-form button {
      background-color: #2ecc71;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .reply-form button:hover {
      background-color: #27ae60;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">
        <img src="/images/agri_logo.jpeg" alt="Logo">
      </div>
      <nav>
        <ul>
          <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
          <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
          <li class="dropdown">
            <a href="#" onclick="toggleDropdown(event)"><i class="fas fa-shopping-cart"></i> Orders <i class="fas fa-chevron-down"></i></a>
            <ul class="dropdown-menu">
              <li><a href="/admin/orders"><i class="fas fa-box-open"></i> All Orders</a></li>
              <li><a href="/admin/cancelled-orders"><i class="fas fa-ban"></i> Cancelled Orders</a></li>
            </ul>
          </li>
          <li><a href="/admin/order-history"><i class="fas fa-history"></i> Transaction History</a></li>
          <li><a href="/admin/messages"><i class="fas fa-comments"></i> Messages</a></li>
          <li><a href="/admin/accounts"><i class="fas fa-users"></i> Accounts</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <header>
        <div class="search-bar">
          <input type="text" placeholder="Search">
          <button><i class="fas fa-search"></i></button>
        </div>
        <div class="profile">
          <i class="fas fa-user-circle"></i>
          <button class="logout-btn" onclick="confirmLogout()">Logout</button>
        </div>
      </header>

      <!-- Grouped Messages by User -->
      <div class="message-list">
        <% if (messages && messages.length > 0) { %>
          <% let groupedMessages = {}; %>
          <% messages.forEach(message => { %>
            <% if (!groupedMessages[message.fullname]) { %>
              <% groupedMessages[message.fullname] = [] %>
            <% } %>
            <% groupedMessages[message.fullname].push(message); %>
          <% }) %>

          <% for (let user in groupedMessages) { %>
            <div class="conversation">
              <!-- Display User's Name once -->
              <h3>Conversation with <%= user %> (<%= groupedMessages[user][0].email %>)</h3>
              <ul>
                <% // Sort messages by created_at so newer messages appear at the bottom %>
                <% let sortedMessages = groupedMessages[user].sort((a, b) => new Date(a.created_at) - new Date(b.created_at)); %>

                <% sortedMessages.forEach((message, index) => { %>
                  <li>
                    <!-- User's Message -->
                    <div class="user-message">
                      <strong><%= message.fullname %> (<%= message.email %>)</strong>
                      <p><%= message.message %></p>
                      <small><strong>Sent on:</strong> <%= new Date(message.created_at).toLocaleString() %></small>
                    </div>

                    <!-- Admin's Reply (if exists) -->
                    <% if (message.admin_reply) { %>
                      <div class="admin-reply">
                        <strong>You:</strong>
                        <p><%= message.admin_reply %></p>
                        <small><%= new Date(message.reply_created_at).toLocaleString() %></small>
                      </div>
                    <% } %>
                  </li>
                <% }) %>
              </ul>

              <!-- Reply Form for Current User -->
              <form action="/admin/reply-message" method="POST" class="reply-form">
                <input type="hidden" name="messageId" value="<%= groupedMessages[user][0].contact_id %>">
                <textarea name="adminReply" rows="4" placeholder="Enter your reply..."></textarea>
                <button type="submit">Send Reply</button>
              </form>
            </div>
          <% } %>
        <% } else { %>
          <p>No messages found.</p>
        <% } %>
      </div>

    </main>
  </div>

  <script>
    function confirmLogout() {
      if (confirm("Are you sure you want to log out?")) {
        window.location.href = '/login'; // Redirect to logout route
      }
    }

    function toggleDropdown(event) {
      event.preventDefault();
      const parentLi = event.target.closest('li');
      parentLi.classList.toggle('open');
    }
  </script>
</body>
</html>
