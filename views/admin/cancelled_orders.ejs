<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Cancelled Orders</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background-color: #2e3b4e;
      color: #fff;
      padding-top: 20px;
    }

    .sidebar .logo {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .sidebar .logo img {
      border-radius: 50%;
      width: 70px;
      height: 70px;
    }

    .sidebar nav ul {
      list-style: none;
      padding: 20px 0;
    }

    .sidebar nav ul li a {
      display: block;
      padding: 10px 20px;
      color: #fff;
      text-decoration: none;
    }

    .sidebar nav ul li a:hover {
      background-color: #3f4d63;
    }

    .main-content {
      flex: 1;
      background-color: #1b2533;
      color: #fff;
      padding: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 20px;
    }

    .search-bar input {
      padding: 5px;
      border: none;
      border-radius: 5px;
    }

    .profile {
      display: flex;
      align-items: center;
    }

    .profile i {
      font-size: 40px;
      color: #fff;
      margin-right: 10px;
    }

    .logout-btn {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      background-color: #dc3545;
      color: white;
      cursor: pointer;
    }

    .logout-btn:hover {
      background-color: #c82333;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #2c3e50;
      color: #fff;
    }

    tr {
      background-color: #fff;
      color: #1b2533;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
    }

    .edit-btn, .confirm-btn, .decline-btn {
      padding: 5px 10px;
      background-color: #ffc107;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
    }

    .confirm-btn {
      background-color: #28a745;
    }

    .decline-btn {
      background-color: #dc3545;
    }

    .edit-btn:hover, .confirm-btn:hover, .decline-btn:hover {
      background-color: #e0a800;
    }

    .confirm-btn:hover {
      background-color: #218838;
    }

    .decline-btn:hover {
      background-color: #c82333;
    }

    .alert {
      padding: 10px;
      background-color: #28a745;
      color: white;
      margin-bottom: 20px;
      border-radius: 4px;
    }

    .delete-btn, .clear-btn {
      padding: 5px 10px;
      background-color: #dc3545;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .delete-btn:hover, .clear-btn:hover {
      background-color: #c82333;
    }

    .clear-btn {
    background-color: #007bff;
    padding: 12px 24px; 
    font-size: 12px;    
    border-radius: 6px;  
    cursor: pointer;    
}

.clear-btn:hover {
  background-color: #0056b3; 
}

    .alert {
      padding: 10px;
      background-color: #28a745;
      color: white;
      margin-bottom: 20px;
      border-radius: 4px;
    }
    .sidebar {
  position: fixed; 
  top: 0;
  left: 0;
  width: 250px;
  height: 100vh; 
  background-color: #2e3b4e;
  color: #fff;
  padding-top: 20px;
  z-index: 100; 
}

.main-content {
  margin-left: 250px; 
  padding: 20px;
  background-color: #1b2533;
  color: #fff;
  flex: 1;
}
  </style>
</head>
<body>
  <div class="container">
    <aside class="sidebar">
        <div class="logo">
          <img src="/images/agri_logo.jpeg" alt="Logo">
        </div>
        <nav>
          <ul>
            <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
            <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
            <li><a href="/admin/orders"><i class="fas fa-shopping-cart"></i> Orders</a></li>
            <li><a href="/admin/cancelled-orders"><i class="fas fa-ban"></i> Cancelled Orders</a></li>
            <li><a href="/admin/order-history"><i class="fas fa-history"></i> Transaction History</a></li>
            <li><a href="/admin/messages"><i class="fas fa-comments"></i> Messages</a></li>
            <li><a href="/admin/accounts"><i class="fas fa-users"></i> Accounts</a></li>
          </ul>
        </nav>
    </aside>
    
    <main class="main-content">
      <header>
        <div class="search-bar">
          <input type="text" placeholder="Search">
          <button><i class="fas fa-search"></i></button>
        </div>
        <div class="profile">
          <i class="fas fa-user-circle"></i>
          <button class="logout-btn" onclick="confirmLogout()">Logout</button>
        </div>
      </header>

      <div class="header-container">
        <h1>Cancelled Orders</h1>
        <!-- Clear All Button -->
        <form action="/admin/clear-cancelled-orders" method="POST" onsubmit="return confirm('Are you sure you want to clear all cancelled orders?');">
          <button type="submit" class="clear-btn" style="float: right;">Clear All</button>
        </form>
      </div>

      <!-- Success Message -->
      <% if (success) { %>
        <div id="success-message" class="alert">
          <%= success %>
        </div>
      <% } %>
  

      <!-- Cancelled Orders Table -->
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Product Names and Quantities</th>
            <th>User ID</th>
            <th>Address</th>
            <th>Contact Number</th>
            <th>Payment Method</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Action</th> 
          </tr>
        </thead>
        <tbody>
          <% if (cancelledOrders && cancelledOrders.length > 0) { %>
            <% cancelledOrders.forEach(order => { %>
              <tr>
                <td><%= order.order_id %></td>
                <td>
                  <% order.items.forEach(item => { %>
                    <p><%= item.product_name %> (x<%= item.quantity %>)</p>
                  <% }); %>
                </td>
                <td><%= order.user_id %></td>
                <td><%= order.address %></td>
                <td><%= order.contact_number %></td>
                <td><%= order.payment_method %></td>
                <td>â‚±<%= order.total_amount %></td>
                <td><%= order.status %></td>
                <td><%= order.created_at %></td>
                <td>
                  <!-- Delete Button -->
                  <form action="/admin/delete-cancelled-order/<%= order.order_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this order?');">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="9" style="text-align: center;">No cancelled orders</td>
            </tr>
          <% } %>
        </tbody>          
      </table>
    </main>
  </div>

  <script>
    function confirmLogout() {
      if (confirm("Are you sure you want to log out?")) {
        window.location.href = '/login'; 
      }
    }

    window.onload = function() {
      const successMessage = document.getElementById('success-message');
      if (successMessage) {
        setTimeout(function() {
          successMessage.style.display = 'none';
        }, 3000);
      }
    };
  </script>
</body>
</html>
